<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="preferences">
    <PreferenceCategory
        android:title="General">
        <!--suppress AndroidElementNotAllowed -->
        <TimePickerPreference
            android:key="pref_bedtime"
            android:persistent="true"
            android:summary="Edit your bedtime"
            android:title="Bedtime"
            app:pref_hourFormat="auto"
            app:pref_pickerTime="19:35"
            app:pref_summaryHasTime="Bedtime is %s" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_autoDoNotDisturb"
            android:title="Automatic Do Not Disturb"
            android:summary="Enable Do Not Disturb at your bedtime (not including alarms)"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_buttonHide"
            android:title="Tap to Hide"
            android:summary="Tap anywhere on the main screen to hide the settings and feedback button"/>


    </PreferenceCategory>
    <PreferenceCategory
        android:title="Notifications">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_notificationsEnabled"
            android:title="Enable Notifications"
            android:summary="Enable/Disable sleep reminder notifications"
            android:enabled="true"/>
        <EditTextPreference
            android:dependency="pref_notificationsEnabled"
            android:inputType="number"
            android:key="pref_notificationDelay"
            android:title="Notification Delay"
            android:summary="15 minute delay between sleep notifications"
            android:maxLength="2"
            android:defaultValue="15"
            android:max="30"/>
        <!--suppress AndroidElementNotAllowed -->
        <SimpleMenuPreference
            android:dependency="pref_notificationsEnabled"
            android:key="pref_numNotifications"
            android:title="Notification Amount"
            android:summary="%s"
            android:defaultValue="1"
            android:entries="@array/pref_list_entries"
            android:entryValues="@array/pref_list_values"
            />


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Advanced Options"
        android:key="pref_advanced_options">
        <PreferenceScreen
            android:key="pref_advanced_purchase"
            android:title="Unlock Advanced Options Ad-Free"
            android:summary="Support me and unlock all advanced options without advertisements for life">

        </PreferenceScreen>
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_adsEnabled"
            android:title="Enable Advertisements"
            android:summary="Unlock advanced options without paying by showing ads (ads will never be shown outside of the app) "/>
        <PreferenceScreen
            android:key="pref_customNotifications_category"
            android:title="Custom Notifications"
            android:summary="Customize your sleep notifications">
            <EditTextPreference
                android:inputType="text"
                android:key="pref_notification1"
                android:title="Notification 1"
                android:defaultValue="@string/notification1"
                android:summary="@string/notification1"/>
            <EditTextPreference
                android:inputType="text"
                android:key="pref_notification2"
                android:title="Notification 2"
                android:defaultValue="@string/notification2"
                android:summary="@string/notification2"/>
            <EditTextPreference
                android:inputType="text"
                android:key="pref_notification3"
                android:title="Notification 3"
                android:defaultValue="@string/notification3"
                android:summary="@string/notification3"/>
            <EditTextPreference
                android:inputType="text"
                android:key="pref_notification4"
                android:title="Notification 4"
                android:defaultValue="@string/notification4"
                android:summary="@string/notification4"/>
            <EditTextPreference
                android:inputType="text"
                android:key="pref_notification5"
                android:title="Notification 5"
                android:defaultValue="@string/notification5"
                android:summary="@string/notification5"/>
        </PreferenceScreen>

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_smartNotifications"
            android:title="Persistent Notifications"
            android:summary="Send notifications based on usage patterns (note, requires usage permission)"
            android:dependency="pref_adsEnabled"/>



    </PreferenceCategory>
</PreferenceScreen>